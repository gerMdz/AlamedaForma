<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}FORMA - Iglesia de La Alameda{% endblock %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">

    {# Open Graph & Twitter metadata for FORMA #}
    {% set app_title = block('title')|striptags %}
    {% set app_description = 'Herramienta FORMA de la Iglesia de La Alameda para descubrir tu dise√±o dado por Dios (F.O.R.M.A).' %}
    {% set og_image = absolute_url(asset('images/logo-con-nombre.png')) %}
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ app_title }}">
    <meta property="og:site_name" content="FORMA - Iglesia de La Alameda">
    <meta property="og:description" content="{{ app_description }}">
    <meta property="og:url" content="{{ absolute_url(app.request.uri) }}">
    <meta property="og:image" content="{{ og_image }}">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:alt" content="FORMA - Iglesia de La Alameda">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ app_title }}">
    <meta name="twitter:description" content="{{ app_description }}">
    <meta name="twitter:image" content="{{ og_image }}">

    {% block stylesheets %}
        {{ vite_entry_link_tags('app') }}
        {#        {{ encore_entry_link_tags('app') }} #}
        {#        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}"> #}
        {#        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"> #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lato:wght@300;400;700&display=swap"
              rel="stylesheet">
    {% endblock %}


</head>
<body data-bs-spy="scroll" data-bs-target="#navbar" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true"
      tabindex="0">
{% block header %}
    {{ include('_bases/_nav.html.twig') }}
{% endblock %}

{% block body %}
    {#    <div {{ vue_component('Hello', { 'name': 'Ger' }) }}></div> #}
    <div id="app">
    </div>

{% endblock %}

{% block javascripts %}
